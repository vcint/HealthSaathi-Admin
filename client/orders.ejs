<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Orders</title>
</head>
<body>
    <h2>Customer Orders</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Customer ID</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.userName %></td>
                    <td><%= order.userId %></td>
                    <td><a href="<%= order.imageUrl %>" target="_blank">View Image</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>